{
  "name": "@shipyard/shared",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared utilities for shipyard",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./registry-config": {
      "import": "./dist/registry-config.mjs",
      "types": "./dist/registry-config.d.mts"
    },
    "./instructions": {
      "import": "./dist/instructions/index.mjs",
      "types": "./dist/instructions/index.d.mts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
