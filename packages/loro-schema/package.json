{
  "name": "@shipyard/loro-schema",
  "version": "0.1.0",
  "type": "module",
  "description": "Loro-based schema and CRDT helpers for Shipyard",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src && eslint 'src/**/*.ts' --no-warn-ignored --report-unused-disable-directives-severity=off --max-warnings 0",
    "lint:fix": "biome check src --write",
    "lint:typeassertions": "eslint 'src/**/*.ts' --no-warn-ignored --report-unused-disable-directives-severity=off --max-warnings 0",
    "check": "pnpm typecheck && pnpm lint && pnpm test && pnpm build"
  },
  "dependencies": {
    "@loro-extended/change": "catalog:",
    "zod": "catalog:",
    "lz-string": "catalog:",
    "nanoid": "catalog:"
  },
  "peerDependencies": {
    "loro-crdt": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "bunup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "loro-crdt": "catalog:"
  }
}
