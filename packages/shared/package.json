{
  "name": "@shipyard/shared",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared utilities for shipyard",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./registry-config": {
      "import": "./dist/registry-config.mjs",
      "types": "./dist/registry-config.d.mts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "tsdown": "0.20.0-beta.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
