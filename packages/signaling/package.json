{
  "name": "@shipyard/signaling",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared types and client for the Shipyard signaling server",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./client": {
      "types": "./src/client/index.ts",
      "default": "./src/client/index.ts"
    }
  },
  "publishConfig": {
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js"
      },
      "./client": {
        "types": "./dist/client/index.d.ts",
        "import": "./dist/client/index.js"
      }
    }
  },
  "scripts": {
    "build": "bunup",
    "dev": "bunup --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write"
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "bunup": "^0.16.22",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
