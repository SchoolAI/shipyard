{
  "name": "@shipyard/schema",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared types and schemas for shipyard",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./plan": {
      "import": "./dist/plan.mjs",
      "types": "./dist/plan.d.mts"
    },
    "./url": {
      "import": "./dist/url-encoding.mjs",
      "types": "./dist/url-encoding.d.mts"
    },
    "./yjs": {
      "import": "./dist/yjs-helpers.mjs",
      "types": "./dist/yjs-helpers.d.mts"
    },
    "./claude-paths": {
      "import": "./dist/claude-paths.mjs",
      "types": "./dist/claude-paths.d.mts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write"
  },
  "dependencies": {
    "@blocknote/core": "catalog:",
    "@trpc/server": "catalog:",
    "lz-string": "catalog:",
    "nanoid": "catalog:",
    "yjs": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
