{
  "name": "@shipyard/schema",
  "version": "0.1.0",
  "type": "module",
  "description": "Shared types and schemas for shipyard",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./plan": {
      "import": "./dist/plan.mjs",
      "types": "./dist/plan.d.mts"
    },
    "./url": {
      "import": "./dist/url-encoding.mjs",
      "types": "./dist/url-encoding.d.mts"
    },
    "./yjs": {
      "import": "./dist/yjs-helpers.mjs",
      "types": "./dist/yjs-helpers.d.mts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write"
  },
  "dependencies": {
    "@blocknote/core": "^0.45.0",
    "@trpc/server": "^11.8.1",
    "lz-string": "^1.5.0",
    "nanoid": "^5.1.6",
    "yjs": "^13.6.28",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsdown": "0.19.0-beta.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
