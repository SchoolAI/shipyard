{
  "name": "@shipyard/mcp-proxy",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "MCP stdio-to-HTTP bridge for Claude Code - proxies MCP messages to the Shipyard daemon",
  "main": "./dist/index.js",
  "bin": {
    "shipyard-mcp-proxy": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:"
  }
}
