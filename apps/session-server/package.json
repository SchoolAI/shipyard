{
  "name": "@shipyard/session-server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --env development",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "build": "echo 'Cloudflare Workers build via wrangler deploy'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "check": "pnpm typecheck && pnpm lint && pnpm test && pnpm build",
    "analyze:fan-in": "tsx ../../scripts/analyze-fan-in.ts",
    "secret:github-client-id": "wrangler secret put GITHUB_CLIENT_ID",
    "secret:github-client-secret": "wrangler secret put GITHUB_CLIENT_SECRET",
    "secret:jwt-secret": "wrangler secret put JWT_SECRET"
  },
  "dependencies": {
    "@shipyard/session": "workspace:*",
    "hono": "catalog:",
    "zod": "catalog:zod3"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@cloudflare/vitest-pool-workers": "^0.12.9",
    "@vitest/coverage-istanbul": "^3.0.4",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "^3.2.0",
    "wrangler": "catalog:"
  }
}
