{
  "name": "@shipyard/hook",
  "version": "0.1.0",
  "type": "module",
  "description": "Claude Code integration hook for Shipyard collaborative planning",
  "main": "./dist/index.js",
  "bin": {
    "shipyard-hook": "./dist/index.js",
    "shipyard-hook-install": "./scripts/postinstall.mjs"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SchoolAI/shipyard.git",
    "directory": "apps/hook"
  },
  "bugs": {
    "url": "https://github.com/SchoolAI/shipyard/issues"
  },
  "homepage": "https://github.com/SchoolAI/shipyard#readme",
  "keywords": [
    "claude-code",
    "hook",
    "shipyard",
    "planning",
    "collaboration"
  ],
  "scripts": {
    "dev": "pnpm link --global && bunup --watch",
    "dev:link": "pnpm link --global",
    "build": "bunup",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "postinstall": "bun ./scripts/postinstall.mjs"
  },
  "dependencies": {
    "@blocknote/server-util": "^0.46.1",
    "@trpc/client": "^11.8.1",
    "nanoid": "^5.1.6",
    "open": "^11.0.0",
    "pino": "^10.2.1",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.29",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@shipyard/schema": "workspace:*",
    "@shipyard/shared": "workspace:*",
    "@types/bun": "^1.2.11",
    "bunup": "^0.16.22",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
