{
  "name": "@shipyard/hook",
  "version": "0.1.0",
  "description": "Claude Code integration hook for Shipyard collaborative planning",
  "main": "./dist/index.js",
  "bin": {
    "shipyard-hook": "./dist/index.js",
    "shipyard-hook-install": "./scripts/postinstall.mjs"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SchoolAI/shipyard.git",
    "directory": "apps/hook"
  },
  "bugs": {
    "url": "https://github.com/SchoolAI/shipyard/issues"
  },
  "homepage": "https://github.com/SchoolAI/shipyard#readme",
  "keywords": [
    "claude-code",
    "hook",
    "shipyard",
    "planning",
    "collaboration"
  ],
  "scripts": {
    "dev": "pnpm link --global && tsup --watch",
    "dev:link": "pnpm link --global",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "postinstall": "node ./scripts/postinstall.mjs"
  },
  "dependencies": {
    "@blocknote/server-util": "^0.45.0",
    "@trpc/client": "^11.8.1",
    "nanoid": "^5.0.9",
    "open": "^11.0.0",
    "pino": "^10.1.0",
    "undici": "^7.19.0",
    "y-websocket": "^2.0.4",
    "yjs": "^13.6.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@shipyard/schema": "workspace:*",
    "@shipyard/shared": "workspace:*",
    "@types/node": "^25.0.3",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^2.1.0"
  }
}
