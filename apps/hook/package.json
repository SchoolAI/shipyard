{
  "name": "@peer-plan/hook",
  "version": "0.1.0",
  "type": "module",
  "description": "Claude Code integration hook for peer-plan",
  "main": "./dist/index.mjs",
  "bin": {
    "peer-plan-hook": "./dist/index.mjs"
  },
  "files": [
    "dist",
    ".claude-plugin",
    "hooks"
  ],
  "scripts": {
    "dev": "pnpm link --global && tsdown --watch --on-success 'node dist/index.mjs'",
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "bash install.sh || echo 'Run install.sh manually to configure Claude Code hooks'"
  },
  "dependencies": {
    "@peer-plan/schema": "workspace:*",
    "nanoid": "^5.0.9",
    "open": "^11.0.0",
    "pino": "^10.1.0",
    "y-websocket": "^2.0.4",
    "yjs": "^13.6.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "pino-pretty": "^13.1.3",
    "tsdown": "^0.19.0-beta.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.0"
  }
}
