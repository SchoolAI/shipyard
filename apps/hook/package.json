{
  "name": "@shipyard/hook",
  "version": "0.1.0",
  "type": "module",
  "description": "Claude Code integration hook for Shipyard collaborative planning",
  "main": "./dist/index.js",
  "bin": {
    "shipyard-hook": "./dist/index.js",
    "shipyard-hook-install": "./scripts/postinstall.mjs"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SchoolAI/shipyard.git",
    "directory": "apps/hook"
  },
  "bugs": {
    "url": "https://github.com/SchoolAI/shipyard/issues"
  },
  "homepage": "https://github.com/SchoolAI/shipyard#readme",
  "keywords": [
    "claude-code",
    "hook",
    "shipyard",
    "planning",
    "collaboration"
  ],
  "scripts": {
    "dev": "pnpm link --global && bunup --watch",
    "dev:link": "pnpm link --global",
    "build": "bunup",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "postinstall": "bun ./scripts/postinstall.mjs"
  },
  "dependencies": {
    "@blocknote/server-util": "catalog:",
    "@trpc/client": "catalog:",
    "nanoid": "catalog:",
    "open": "catalog:",
    "pino": "catalog:",
    "y-websocket": "catalog:",
    "yjs": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@shipyard/loro-schema": "workspace:*",
    "@shipyard/shared": "workspace:*",
    "@types/bun": "catalog:",
    "bunup": "catalog:",
    "pino-pretty": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
