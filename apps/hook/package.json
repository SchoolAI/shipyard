{
  "name": "@shipyard/hook",
  "version": "0.1.0",
  "type": "module",
  "description": "Claude Code integration hook for shipyard",
  "main": "./dist/index.mjs",
  "bin": {
    "shipyard-hook": "./dist/index.mjs",
    "shipyard-hook-install": "./scripts/postinstall.mjs"
  },
  "files": [
    "dist",
    "scripts",
    ".claude-plugin",
    "hooks"
  ],
  "scripts": {
    "dev": "pnpm link --global && tsdown --watch",
    "dev:link": "pnpm link --global",
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm build",
    "postinstall": "node ./scripts/postinstall.mjs"
  },
  "dependencies": {
    "@blocknote/server-util": "^0.45.0",
    "@shipyard/schema": "workspace:*",
    "@shipyard/shared": "workspace:*",
    "@trpc/client": "^11.8.1",
    "nanoid": "^5.0.9",
    "open": "^11.0.0",
    "pino": "^10.1.0",
    "y-websocket": "^2.0.4",
    "yjs": "^13.6.0",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "pino-pretty": "^13.1.3",
    "tsdown": "^0.19.0-beta.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.0"
  }
}
