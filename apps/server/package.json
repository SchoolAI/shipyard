{
  "name": "@shipyard/server",
  "version": "0.1.0",
  "type": "module",
  "description": "MCP server for Shipyard collaborative planning with CRDTs",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "files": [
    "dist",
    ".env.example"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SchoolAI/shipyard.git",
    "directory": "apps/server"
  },
  "bugs": {
    "url": "https://github.com/SchoolAI/shipyard/issues"
  },
  "homepage": "https://github.com/SchoolAI/shipyard#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "collaboration",
    "shipyard",
    "crdt",
    "planning"
  ],
  "scripts": {
    "dev": "tsup --watch --onSuccess 'node dist/index.mjs'",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "inspect-plan": "tsx src/inspect-plan.ts"
  },
  "dependencies": {
    "@blocknote/core": "^0.45.0",
    "@blocknote/server-util": "^0.45.0",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@octokit/rest": "^21.0.0",
    "@roamhq/wrtc": "^0.9.1",
    "@trpc/server": "^11.8.1",
    "express": "^5.2.1",
    "lib0": "^0.2.117",
    "nanoid": "^5.0.9",
    "open": "^10.1.0",
    "pino": "^10.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.3",
    "y-leveldb": "^0.2.0",
    "y-protocols": "^1.0.7",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^3.0.0",
    "yjs": "^13.6.28",
    "zod": "^4.3.4"
  },
  "devDependencies": {
    "@shipyard/schema": "workspace:*",
    "@shipyard/shared": "workspace:*",
    "@floating-ui/dom": "^1.6.14",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@types/ws": "^8.18.1",
    "pino-pretty": "^13.1.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
