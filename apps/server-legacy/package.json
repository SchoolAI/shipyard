{
  "name": "@shipyard/server-legacy",
  "version": "0.1.0",
  "type": "module",
  "description": "MCP server for Shipyard collaborative planning with CRDTs",
  "main": "./dist/index.js",
  "bin": "./dist/index.js",
  "files": [
    "dist",
    ".env.example"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=22.14.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SchoolAI/shipyard.git",
    "directory": "apps/server"
  },
  "bugs": {
    "url": "https://github.com/SchoolAI/shipyard/issues"
  },
  "homepage": "https://github.com/SchoolAI/shipyard#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "collaboration",
    "shipyard",
    "crdt",
    "planning"
  ],
  "scripts": {
    "dev": "tsup --watch --onSuccess 'node dist/index.js'",
    "dev:watch": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "inspect-plan": "tsx src/inspect-plan.ts"
  },
  "dependencies": {
    "@blocknote/core": "catalog:",
    "@blocknote/server-util": "catalog:",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@modelcontextprotocol/sdk": "catalog:",
    "@octokit/rest": "catalog:",
    "@roamhq/wrtc": "^0.9.1",
    "@roamhq/wrtc-linux-x64": "^0.9.1",
    "@trpc/server": "catalog:",
    "express": "catalog:",
    "lib0": "catalog:",
    "nanoid": "catalog:",
    "open": "catalog:",
    "pino": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:",
    "ws": "catalog:",
    "y-leveldb": "catalog:",
    "y-protocols": "catalog:",
    "y-webrtc": "catalog:",
    "y-websocket": "catalog:",
    "yjs": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@shipyard/schema": "workspace:*",
    "@shipyard/shared": "workspace:*",
    "@types/express": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@types/ws": "catalog:",
    "pino-pretty": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
