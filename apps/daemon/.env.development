# Required for running Claude agent tasks (not needed for signaling-only)
ANTHROPIC_API_KEY=

# Signaling server connection (optional - enables machine presence)
# Format: ws://localhost:4444/personal/<userId>
SHIPYARD_SIGNALING_URL=
SHIPYARD_USER_TOKEN=

# Machine identity (defaults to os.hostname() if not set)
# SHIPYARD_MACHINE_ID=
# SHIPYARD_MACHINE_NAME=

# Data directory (default: ~/.shipyard/data)
# SHIPYARD_DATA_DIR=

# Log level: debug | info | warn | error (default: info)
# LOG_LEVEL=debug
