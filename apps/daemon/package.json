{
  "name": "shipyard",
  "version": "0.1.0",
  "description": "Agent launcher daemon - enables browser to trigger local Claude Code sessions",
  "type": "module",
  "bin": {
    "shipyard": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@shipyard/schema": "workspace:*",
    "@shipyard/shared": "workspace:*",
    "dotenv": "^17.2.3",
    "nanoid": "^5.1.6",
    "pino": "^10.2.1",
    "ws": "^8.18.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "tsup": "^8.5.1",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=22.14.0"
  }
}
