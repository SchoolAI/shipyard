{
  "name": "@shipyard/daemon",
  "version": "0.1.0",
  "type": "module",
  "description": "Shipyard daemon - Claude Agent SDK + Loro CRDT sync",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "shipyard-daemon": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write",
    "check": "pnpm typecheck && pnpm lint && pnpm test && pnpm build",
    "analyze:fan-in": "tsx ../../scripts/analyze-fan-in.ts"
  },
  "dependencies": {
    "@shipyard/loro-schema": "workspace:*",
    "@shipyard/session": "workspace:*",
    "@anthropic-ai/claude-agent-sdk": "catalog:",
    "@tiptap/core": "catalog:",
    "@tiptap/pm": "catalog:",
    "@tiptap/starter-kit": "catalog:",
    "@loro-extended/adapter-webrtc": "catalog:",
    "@loro-extended/change": "catalog:",
    "@loro-extended/repo": "catalog:",
    "loro-crdt": "catalog:",
    "loro-prosemirror": "catalog:",
    "markdown-it": "^14.1.1",
    "prosemirror-markdown": "catalog:",
    "node-datachannel": "^0.32.1",
    "pino": "catalog:",
    "nanoid": "catalog:",
    "node-pty": "^1.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "pino-pretty": "catalog:"
  },
  "engines": {
    "node": ">=22"
  }
}
