{
  "mcpServers": {
    "shipyard": {
      "command": "npx",
      "args": ["mcpmon", "--watch", "apps/server/dist/index.js", "--ext", "js", "--", "node", "apps/server/dist/index.js"],
      "env": {
        "NODE_ENV": "development",
        "SHIPYARD_WEB_URL": "http://localhost:5173"
      }
    },
    "heroui-react": {
      "command": "npx",
      "args": ["-y", "@heroui/react-mcp@latest"]
    }
  }
}
