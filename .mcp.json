{
  "mcpServers": {
    "shipyard": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@schoolai/shipyard-mcp",
        "mcp-server-shipyard"
      ],
      "env": {
        "NODE_ENV": "production"
      }
    },
    "heroui-react": {
      "command": "npx",
      "args": [
        "-y",
        "@heroui/react-mcp@latest"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--user-data-dir=/tmp/pw-79-distribute-shipyard"
      ]
    },
    "shipyard-dev": {
      "type": "stdio",
      "command": "node",
      "args": [
        "apps/server/dist/index.js"
      ],
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug"
      }
    }
  }
}
