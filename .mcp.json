{
  "mcpServers": {
    "shipyard-dev": {
      "type": "stdio",
      "command": "node",
      "args": ["apps/server/dist/index.js"],
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "debug",
        "SIGNALING_URL": "ws://localhost:4444",
        "SHIPYARD_WEB_URL": "http://localhost:5173"
      }
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest", "--user-data-dir=/tmp/pw-105-local-changes"]
    }
  }
}
