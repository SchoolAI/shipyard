{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Local development hooks - NOT auto-loaded. Use 'pnpm hooks:local' to enable.",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "node apps/hook/dist/index.js"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "node apps/hook/dist/index.js",
            "timeout": 1800
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "ExitPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "node apps/hook/dist/index.js"
          }
        ]
      }
    ]
  }
}
