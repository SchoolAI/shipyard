{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/*.css"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useSemanticElements": "off"
      },
      "complexity": {
        "noBannedTypes": "error",
        "noUselessRename": "error",
        "noUselessTernary": "error",
        "noExcessiveCognitiveComplexity": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noInvalidConstructorSuper": "error",
        "noConstantCondition": "error",
        "noSwitchDeclarations": "error",
        "noInvalidUseBeforeDeclaration": "error",
        "noUnusedVariables": "warn",
        "noUnreachable": "error",
        "noEmptyPattern": "error",
        "noUnusedFunctionParameters": "warn",
        "noPrecisionLoss": "error",
        "noInnerDeclarations": "error"
      },
      "performance": {
        "noAccumulatingSpread": "error"
      },
      "security": {
        "noDangerouslySetInnerHtml": "error"
      },
      "style": {
        "noNonNullAssertion": "error",
        "useImportType": "error",
        "useNodejsImportProtocol": "error",
        "useTemplate": "error",
        "useExponentiationOperator": "error",
        "noRestrictedImports": "off"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noImplicitAnyLet": "error",
        "noDoubleEquals": "error",
        "noAssignInExpressions": "error",
        "noConsole": "error",
        "noDebugger": "error",
        "noVar": "error",
        "noRedeclare": "error",
        "noArrayIndexKey": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  },
  "css": {
    "parser": {
      "cssModules": false,
      "allowWrongLineComments": true,
      "tailwindDirectives": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.test.ts", "**/*.spec.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "correctness": {
            "noUnusedVariables": "off"
          },
          "style": {
            "noNonNullAssertion": "off"
          },
          "complexity": {
            "noExcessiveCognitiveComplexity": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/scripts/*.ts", "**/scripts/*.js", "**/scripts/*.mjs"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["spikes/**/*"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off",
            "noExplicitAny": "off"
          },
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedFunctionParameters": "off"
          }
        }
      }
    },
    {
      "includes": [
        "apps/session-server/**/logger.ts",
        "apps/session-server/**/logger.test.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    },
    {
      "includes": ["apps/session-server/cloudflare/worker-configuration.d.ts"],
      "linter": {
        "enabled": false
      }
    },
    {
      "includes": ["**/*.css"],
      "linter": {
        "enabled": false
      },
      "formatter": {
        "enabled": false
      }
    },
    {
      "includes": [
        "**/mcp/**/*.ts",
        "**/loro/**/*.ts",
        "**/agents/**/*.ts",
        "**/http/routes/**/*.ts"
      ],
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": "warn"
          }
        }
      }
    }
  ]
}
