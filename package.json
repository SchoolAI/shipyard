{
  "name": "shipyard-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "P2P collaborative review for AI-generated implementation plans",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:comments": "bash scripts/lint-comments.sh",
    "lint:typeassertions": "bash scripts/lint-typeassertions.sh",
    "lint:fix": "turbo run lint:fix",
    "check": "turbo run test typecheck lint && pnpm lint:comments && pnpm lint:typeassertions",
    "dev:all": "pnpm --filter=@shipyard/schema build && pnpm --filter=@shipyard/hook build && concurrently --kill-others-on-fail --names \"schema,server,signal,oauth,ogproxy,web,hook\" --prefix-colors \"gray,green,cyan,blue,red,magenta,yellow\" \"pnpm dev:schema\" \"pnpm dev:server\" \"pnpm dev:signaling\" \"pnpm dev:github-oauth\" \"pnpm dev:og-proxy\" \"pnpm dev:web\" \"pnpm dev:hook\"",
    "dev:local": "bash scripts/dev-local.sh",
    "dev:schema": "turbo run dev --filter=@shipyard/schema",
    "dev:server": "turbo run dev --filter=@shipyard/server",
    "dev:signaling": "turbo run dev --filter=@shipyard/signaling",
    "dev:github-oauth": "turbo run dev --filter=@shipyard/github-oauth-worker",
    "dev:og-proxy": "turbo run dev --filter=@shipyard/og-proxy-worker",
    "dev:web": "turbo run dev --filter=@shipyard/web",
    "dev:hook": "turbo run dev --filter=@shipyard/hook",
    "cleanup": "bash scripts/cleanup.sh",
    "reset": "bash scripts/reset-all.sh",
    "hooks:local": "bash scripts/hooks-local.sh",
    "hooks:prod": "bash scripts/hooks-prod.sh",
    "prepare": "simple-git-hooks",
    "postinstall": "[ -f .mcp.json ] || cp .mcp.json.example .mcp.json 2>/dev/null || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "esbuild-plugin-d.ts": "^1.3.1",
    "eslint": "^9.39.2",
    "playwright": "^1.57.0",
    "simple-git-hooks": "^2.13.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.9.0"
  },
  "packageManager": "pnpm@10.9.0",
  "simple-git-hooks": {
    "pre-commit": "pnpm check"
  }
}
