{
  "name": "shipyard-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "P2P collaborative review for AI-generated implementation plans",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test --filter='!@shipyard/hook' && vitest run",
    "test:meta": "vitest run tests/integration-coverage.test.ts",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:comments": "bash scripts/lint-comments.sh",
    "lint:typeassertions": "bash scripts/lint-typeassertions.sh",
    "lint:fix": "turbo run lint:fix",
    "check": "bash scripts/validate-file-allowlist.sh && turbo run typecheck lint --filter='!@shipyard/session-server' --filter='!@shipyard/hook'",
    "dev:all": "bash scripts/dev-all.sh",
    "dev:local": "bash scripts/dev-local.sh",
    "dev:schema": "turbo run dev --filter=@shipyard/schema",
    "dev:server": "turbo run dev --filter=@shipyard/server",
    "dev:server:watch": "pnpm --filter=@shipyard/server dev:watch",
    "dev:session-server": "turbo run dev --filter=@shipyard/session-server",
    "dev:github-oauth": "turbo run dev --filter=@shipyard/github-oauth-worker",
    "dev:og-proxy": "turbo run dev --filter=@shipyard/og-proxy-worker",
    "dev:web": "turbo run dev --filter=@shipyard/web",
    "dev:hook": "turbo run dev --filter=@shipyard/hook",
    "dev:isolated": "bash scripts/dev-isolated.sh",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v --rmi local",
    "cleanup": "bash scripts/cleanup.sh",
    "reset": "bash scripts/reset-all.sh",
    "hooks:local": "bash scripts/hooks-local.sh",
    "hooks:prod": "bash scripts/hooks-prod.sh",
    "prepare": "simple-git-hooks",
    "postinstall": "[ -f .mcp.json ] || cp .mcp.json.example .mcp.json 2>/dev/null || true"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.2",
    "esbuild-plugin-d.ts": "^1.3.1",
    "eslint": "^9.39.2",
    "mcpmon": "^1.0.1",
    "playwright": "^1.57.0",
    "simple-git-hooks": "^2.13.1",
    "tsup": "catalog:",
    "tsx": "catalog:",
    "turbo": "^2.7.5",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.9.0"
  },
  "packageManager": "pnpm@10.9.0",
  "simple-git-hooks": {
    "pre-commit": "pnpm check"
  },
  "dependencies": {
    "nanoid": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "@loro-extended/change": "link:/Users/jacobpetterle/Working Directory/loro-extended/packages/change",
      "@loro-extended/repo": "link:/Users/jacobpetterle/Working Directory/loro-extended/packages/repo",
      "@loro-extended/react": "link:/Users/jacobpetterle/Working Directory/loro-extended/packages/react",
      "@loro-extended/adapter-indexeddb": "link:/Users/jacobpetterle/Working Directory/loro-extended/adapters/indexeddb",
      "@loro-extended/adapter-websocket": "link:/Users/jacobpetterle/Working Directory/loro-extended/adapters/websocket",
      "@loro-extended/adapter-webrtc": "link:/Users/jacobpetterle/Working Directory/loro-extended/adapters/webrtc",
      "@loro-extended/adapter-leveldb": "link:/Users/jacobpetterle/Working Directory/loro-extended/adapters/leveldb"
    },
    "ignoredBuiltDependencies": [
      "@swc/core",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "workerd"
    ]
  }
}
