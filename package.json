{
  "name": "peer-plan-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "P2P collaborative review for AI-generated implementation plans",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "check": "turbo run test typecheck lint",
    "dev:all": "concurrently --names \"server,signal,oauth,web,hook\" --prefix-colors \"green,cyan,blue,magenta,yellow\" \"pnpm dev:server\" \"pnpm dev:signaling\" \"pnpm dev:github-oauth\" \"pnpm dev:web\" \"pnpm dev:hook\"",
    "dev:local": "bash scripts/dev-local.sh",
    "dev:server": "turbo run dev --filter=@peer-plan/server",
    "dev:signaling": "turbo run dev --filter=@peer-plan/signaling",
    "dev:github-oauth": "pnpm --filter=github-oauth-worker dev",
    "dev:web": "turbo run dev --filter=@peer-plan/web",
    "dev:hook": "turbo run dev --filter=@peer-plan/hook",
    "setup:hook": "pnpm --filter @peer-plan/hook build && cd apps/hook && pnpm link --global && bash install.sh",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "concurrently": "^9.2.1",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.9.0"
  },
  "packageManager": "pnpm@10.9.0",
  "simple-git-hooks": {
    "pre-commit": "pnpm check"
  }
}
