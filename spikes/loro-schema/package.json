{
  "name": "@shipyard/loro-schema",
  "version": "0.1.0",
  "type": "module",
  "description": "Loro-based schema and CRDT helpers for Shipyard",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./shapes": {
      "import": "./dist/shapes.mjs",
      "types": "./dist/shapes.d.mts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "biome check src",
    "lint:fix": "biome check src --write"
  },
  "dependencies": {
    "loro-crdt": "^1.10.3",
    "loro-prosemirror": "^0.1.0",
    "@loro-extended/change": "link:../../../loro-extended/packages/change",
    "@loro-extended/repo": "link:../../../loro-extended/packages/repo",
    "@loro-extended/react": "link:../../../loro-extended/packages/react",
    "nanoid": "^5.1.6",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "tsdown": "0.20.0-beta.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}
